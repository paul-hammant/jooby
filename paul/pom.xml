<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jooby</groupId>
    <artifactId>modules</artifactId>
    <version>1.2.3</version>
  </parent>

  <artifactId>phjooby-demo</artifactId>
  <groupId>com.paulhammant.joobymodularity</groupId>
  <version>1.0-SNAPSHOT</version>

  <name>phjooby demo app</name>

  <properties>
    <jooby.version>1.2.3</jooby.version>

    <!-- Startup class -->
    <application.class>com.paulhammant.joobymodularity.App</application.class>
  </properties>

  <dependencies>

    <dependency>
      <groupId>com.paulhammant.phooby</groupId>
      <artifactId>phooby</artifactId>
      <version>1.2.3</version>
    </dependency>

    <!-- Server -->
    <dependency>
      <groupId>org.jooby</groupId>
      <artifactId>jooby-netty</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.jooby</groupId>
          <artifactId>jooby</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- logging -->
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
    </dependency>

    <!-- Tests -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>io.rest-assured</groupId>
      <artifactId>rest-assured</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.ow2.asm</groupId>
      <artifactId>asm-all</artifactId>
      <version>5.0.3</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <!-- Just say no to seven page license inclusion in source files -->
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>${license-maven-plugin.version}</version>
        <configuration>
          <header>LICENSE</header>
          <strictCheck>true</strictCheck>
          <aggregate>true</aggregate>
          <skipExistingHeaders>false</skipExistingHeaders>
          <includes>
            <include>src/main/java/**/*.java</include>
            <include>src/main/kotlin/**/*.kt</include>
          </includes>
        </configuration>
        <executions>
          <execution>
            <!-- phase none disables this plugin that's otherwise default in the grandparent pom -->
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <!-- Build fat jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
